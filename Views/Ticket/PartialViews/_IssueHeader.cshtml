@model IssueTracker.MVC.ViewModels.TicketViewModel


<div class="row">
    <div class="col-sm">

        <h1 style="font-size: 32px">
            <span>@Html.DisplayFor(m => m.Ticket.Title)</span>
            <span style="color:grey">#@Html.DisplayFor(m => m.Ticket.Id)</span>
        </h1>
    </div>

    <div class="d-flex flex-column flex-md-row">
        <div class="mt-0 mt-md-2 mb-3 mb-md-0  flex-shrink-0 d-flex" style="align-items:flex-start">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model.Ticket.Id" style="font-size:12px">Edit</a>
            <a class="btn btn-sm btn-primary" asp-action="Create" style="font-size:12px">New Issue</a>
        </div>

    </div>
</div>
<div class="d-flex mt-0 " style="align-items:center; margin-right:8px">
    <div class="flex-shrink-0">
        @{ if (Model.Ticket.IsSolved)
                        {
            <span title="Status: Open" class="State State--green">
                <svg height="16" class="octicon octicon-issue-opened" viewBox="0 0 16 16" version="1.1" width="16" aria-hidden="true">
                    <path fill-rule="evenodd" d="M8 1.5a6.5 6.5 0 100 13 6.5 6.5 0 000-13zM0 8a8 8 0 1116 0A8 8 0 010 8zm9 3a1 1 0 11-2 0 1 1 0 012 0zm-.25-6.25a.75.75 0 00-1.5 0v3.5a.75.75 0 001.5 0v-3.5z"></path>
                </svg>
                Open
            </span> }
        else
        {
<span title="Status: Closed" class="State State--red ">
    <svg height="16" class="octicon octicon-issue-closed" viewBox="0 0 16 16" version="1.1" width="16" aria-hidden="true"><path fill-rule="evenodd" d="M1.5 8a6.5 6.5 0 0110.65-5.003.75.75 0 00.959-1.153 8 8 0 102.592 8.33.75.75 0 10-1.444-.407A6.5 6.5 0 011.5 8zM8 12a1 1 0 100-2 1 1 0 000 2zm0-8a.75.75 0 01.75.75v3.5a.75.75 0 11-1.5 0v-3.5A.75.75 0 018 4zm4.78 4.28l3-3a.75.75 0 00-1.06-1.06l-2.47 2.47-.97-.97a.749.749 0 10-1.06 1.06l1.5 1.5a.75.75 0 001.06 0z"></path></svg> Closed
</span> } }
    </div>
    <!--TODO:  <div class="col-sm">Html.DisplayFor(m => m.AuthorUserName) opened this issue Html.DisplayFor(m => m.PostDate)</div>-->

</div>
<hr />

