@model IssueTracker.MVC.Models.Project
@using IssueTracker.MVC.Models;
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
<div class="card">
    <div class="card-header">
        <h2>
            Selected Personnel
        </h2>
        <p>
            Current Users on this Project.
        </p>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AssignedPersonnel.AllPersonnel)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @{ 
                                var userRoles = await UserManager.GetRolesAsync(item);
                                item.UserRole = userRoles.FirstOrDefault();
                            }
                             @Html.DisplayFor(modelItem => item.UserRole)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
