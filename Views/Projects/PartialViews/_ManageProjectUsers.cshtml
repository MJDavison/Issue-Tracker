@model IssueTracker.MVC.Models.Project

<div class="card">
    <div class="card-header">
        <h2>
            Manage Project Users for: @Html.DisplayFor(model => model.ProjectName)
        </h2>
    </div>
    <div class="card-body">         
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="Personnel.Admin.FirstOrDefault().Id"
                        class="form-control"
                        asp-items="@(new SelectList(ViewData.Model.Personnel.Admin, "", ""))">
                    <option>--Select--</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-for="Personnel.ProjectManager.FirstOrDefault().Id"
                        class="form-control"
                        asp-items="@(new SelectList(ViewData.Model.Personnel.ProjectManager, "", ""))">
                    <option>--Select--</option>
                </select>
            </div>
            <div class="form-group">
                <select asp-for="Personnel.Developer.FirstOrDefault().Id"
                        class="form-control" multiple="multiple"
                        asp-items="@(new SelectList(ViewData.Model.Personnel.Developer, "", ""))">                    
                </select>

            </div>
            <div class="form-group">
                <select asp-for="Personnel.Submitter.FirstOrDefault().Id"
                        class="form-control" multiple="multiple"
                        asp-items="@(new SelectList(ViewData.Model.Personnel.Submitter, "", ""))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
                
    </div>
</div>

