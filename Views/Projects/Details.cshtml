@model IssueTracker.MVC.Models.Project

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2>Details for @Html.DisplayFor(model => model.ProjectName)</h2>
                    <a asp-action="Edit" asp-route-id="@Model.ProjectId">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <label asp-for="ProjectName"></label> <br />
                            @Html.DisplayFor(model => model.ProjectName)
                        </div>
                        <div class="col">
                            <label asp-for="ProjectDescription"></label> <br />
                            @Html.DisplayFor(model => model.ProjectDescription)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <partial name="PartialViews/_CurrentPersonnelOnProject"/>
        </div>
        <div class="col">
            <partial name="PartialViews/_IssuesForProject" />
        </div>
    </div>
</div>