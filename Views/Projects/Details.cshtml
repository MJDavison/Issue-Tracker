@model IssueTracker.MVC.ViewModels.ProjectViewModel

@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2>Details for @Html.DisplayFor(model => model.Project.Name)</h2>
                    <a asp-action="Edit" asp-route-id="@Model.Project.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <label asp-for="Project.Name"></label> <br />
                            @Html.DisplayFor(model => model.Project.Name)
                        </div>
                        <div class="col">
                            <label asp-for="Project.Description"></label> <br />
                            @Html.DisplayFor(model => model.Project.Description)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <partial name="PartialViews/_CurrentPersonnelOnProject" />
        </div>
        <div class="col">
            <partial name="PartialViews/_IssuesForProject" />
        </div>
    </div>
</div>