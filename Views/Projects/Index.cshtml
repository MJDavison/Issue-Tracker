@model IEnumerable<IssueTracker.MVC.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectDescription)
            </td>
            <td>
                <ul>
                    <li>
                        <a asp-action="ManageUsers" asp-route-id="@item.ProjectId">Manage Users</a>
                    </li>
                    <li>
                        <a asp-action="Details" asp-route-id="@item.ProjectId">Details</a>
                    </li>
                </ul>
                
                
            </td>
        </tr>
}
    </tbody>
</table>
